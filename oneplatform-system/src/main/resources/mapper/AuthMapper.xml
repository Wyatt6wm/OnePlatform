<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="run.wyatt.oneplatform.system.dao.AuthDao">
    <insert id="insert" parameterType="run.wyatt.oneplatform.system.model.entity.Auth" useGeneratedKeys="true"
            keyColumn="id" keyProperty="id">
        insert into tb_sys_auth(
        <trim suffixOverrides="," suffix="">
            <if test="record.identifier != null">identifier,</if>
            <if test="record.name != null">name,</if>
            <if test="record.description != null">description,</if>
            <if test="record.activated != null">activated,</if>
        </trim>
        ) values (
        <trim suffixOverrides="," suffix="">
            <if test="record.identifier != null">#{record.identifier},</if>
            <if test="record.name != null">#{record.name},</if>
            <if test="record.description != null">#{record.description},</if>
            <if test="record.activated != null">#{record.activated},</if>
        </trim>
        )
    </insert>
    <select id="findAuthsByUserId" resultType="run.wyatt.oneplatform.system.model.entity.Auth">
        select distinct A.id, A.identifier, A.name, A.description, A.activated
        from (select * from tb_sys_user_role where user_id=#{userId}) UR
        inner join tb_sys_role_auth RA on UR.role_id=RA.role_id
        inner join tb_sys_auth A on RA.auth_id=A.id
    </select>
    <update id="update" parameterType="run.wyatt.oneplatform.system.model.entity.Auth">
        update tb_sys_auth set
        <trim suffixOverrides="," suffix="">
            id=id,
            <if test="auth.identifier != null">identifier=#{auth.identifier},</if>
            <if test="auth.name != null">name=#{auth.name},</if>
            <if test="auth.description != null">description=#{auth.description},</if>
            <if test="auth.activated != null">activated=#{auth.activated},</if>
        </trim>
        where id=#{auth.id}
    </update>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="run.wyatt.oneplatform.system.dao.UserDao">
    <insert id="insert" parameterType="run.wyatt.oneplatform.system.model.entity.User" useGeneratedKeys="true"
            keyColumn="id" keyProperty="id">
        insert into tb_sys_user (
        <trim suffixOverrides="," suffix="">
            <if test="username != null">username,</if>
            <if test="password != null">password,</if>
            <if test="salt != null">salt,</if>
            <if test="nickname != null">nickname,</if>
            <if test="motto != null">motto,</if>
            <if test="avatar != null">avatar,</if>
        </trim>
        ) values (
        <trim suffixOverrides="," suffix="">
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
            <if test="salt != null">#{salt},</if>
            <if test="nickname != null">#{nickname},</if>
            <if test="motto != null">#{motto},</if>
            <if test="avatar != null">#{avatar},</if>
        </trim>
        )
    </insert>
    <update id="update">
        update tb_sys_user (
        <trim suffixOverrides="," suffix="">
            <if test="record.nickname != null">nickname,</if>
            <if test="record.motto != null">motto,</if>
        </trim>
        ) values (
        <trim suffixOverrides="," suffix="">
            <if test="record.nickname != null">#{record.nickname},</if>
            <if test="record.motto != null">#{record.motto},</if>
        </trim>
        )
        where id=#{userId}
    </update>
    <select id="findById" resultType="run.wyatt.oneplatform.system.model.entity.User">
        select * from tb_sys_user where id=#{id}
    </select>
    <select id="findByUsername" resultType="run.wyatt.oneplatform.system.model.entity.User">
        select * from tb_sys_user where username=#{username}
    </select>
    <select id="findByNickname" resultType="run.wyatt.oneplatform.system.model.entity.User">
        select * from tb_sys_user where nickname=#{nickname}
    </select>
</mapper>